        "csurf": "^1.8.2",
        "deepmerge": "^0.2.10",
        "express": "~4.12.3",
        "express-session": "~1.10.4",
        "method-override": "~2.3.2",
        "morgan": "^1.6.1",
        "property-seek": "0.0.2",
        "qs": "^2.4.2",
        "restify": "^4.0.3",
        "serve-index": "^1.7.2"
    },
    "devDependencies": {
        "babel": "^5.8.34",
        "jsdoc": "^3.4.0",
        "mocha": "^2.2.1",
        "must": ">= 0.12 < 1",
        "nunjucks": "^1.3.4",
        "sinon": "^1.15.3",
        "supertest": "^1.1.0",
        "supertest-as-promised": "^2.0.2"
    },
    "author": "Lasana Murray",
    "homepage": "http://quenk.com/powerstone",
